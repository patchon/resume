{{#if resume.skills.length}}
<section class="section section-skills">
	<header>
		<i class="fas fa-tools" aria-hidden="true"></i>
		<h2 class='section-title'>Skills</h2>
	</header>
	<section id="skills">
		{{#each resume.skills}}
		<div class="item">
			{{#if name}}
			<h3 class="name">
				{{name}}
			</h3>
			{{/if}} {{#if level}}
			<div class="level {{toLowerCase level}}">
				<em>{{level}}</em>
				<div class="bar"></div>
			</div>
			{{/if}}
			{{#if keywords.length}}
			<ul class="keywords">
				{{#each keywords}}
				<li class={{.}}>{{.}}</li>
				{{/each}}
			</ul>
			{{/if}}
		</div>
		{{/each}}
	</section>
</section>
{{/if}}