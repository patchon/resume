{{#if resume.assignments.length}}
<section class="section section-assignments">
  <header>
    <i class="fas fa-check-circle" aria-hidden="true"></i>
    <h2 class='section-title'>Consulting assignments {{#if resume.topic_count}}<span
        class="item-count">({{resume.assignments.length}})</span>{{/if}}</h2>
  </header>

  <section id="assignments">
    {{#each resume.assignments}}
    <section class="assignments-item">
      {{#if company}}

      {{#if summary}}
      {{#if @first}}
      <input id="assignments-item-{{@index}}" type="checkbox" class="toggle-item" checked="checked" />
      {{else}}
      <input id="assignments-item-{{@index}}" type="checkbox" class="toggle-item" />
      {{/if}}
      <label for="assignments-item-{{@index}}"></label>
      {{/if}}

      <header>
        {{#if position}}
        <div class="position" style="font-weight:500">{{position}}</div>
        {{/if}}
        <div class="company">{{company}}</div>
        <div class="date" style="font-weight:500">
          {{#if startDate}}
          <span class="startDate">{{MY startDate}} - </span>
          {{/if}}
          {{#if endDate}}
          <span class="endDate">{{MY endDate}}</span>
          {{else}}
          <span class="endDate">Current</span>
          {{/if}}
        </div>
      </header>
      {{/if}}

      {{#location}}
      <span class="location">
        <span class="fa fa-map-marker"></span>
        {{#if city}}
        <span class="city">{{city}},</span>
        {{/if}}
        {{#if countryCode}}
        <span class="countryCode">({{countryCode}})</span>
        {{/if}}
        {{#if region}}
        <span class="region">{{region}}</span>
        {{/if}}
      </span>
      {{/location}}
      {{#if website}}
      <span class="website">
        <a target="_blank" href="{{website}}">{{website}}</a>
      </span> {{/if}} {{#if keywords.length}}
      <ul class="keywords">
        {{#each keywords}}
        {{#if (eq . "consulting")}}<li class="{{.}}">{{.}}</li> {{ else }}<li>{{.}}</li>{{/if}}
        {{/each}}
      </ul>
      {{/if}}
      <div class="item" id="assignments-item">
        {{#if summary}}
        <div class="summary">
          <p>{{paragraphSplit summary}}</p>
        </div>
        {{/if}}
        {{#if highlights.length}}
        <ul class="highlights">
          {{#each highlights}}
          {{#if indentclass}}
          <li class="{{ indentclass }}">{{paragraphSplit detail}}</li>
          {{else}}
          <li>{{paragraphSplit detail}}</li>
          {{/if}}
          {{/each}}
        </ul>
        {{/if}}
        {{#if summary_continue}}
        <div class="summary">
          <p>{{paragraphSplit summary_continue}}</p>
        </div>
        {{/if}}
      </div>
    </section>
    {{/each}}
  </section>
</section>
{{/if}}
